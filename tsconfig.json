{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "ES2016"
    ],
    "types": ["node"],
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "editor.d.ts","node_modules/@types","test/**/**.ts"],  
}
